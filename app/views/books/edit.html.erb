<div class="edit">
  <h1>Editing Book</h1>
   <% if @book.errors.any? %>
      <div class="error-message">
        <h2>
          <%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:
        </h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>
  <p>
    <%= link_to "Show", book_path(@book.id), class:"btn" %> | <%= link_to "Back", books_path, class:"btn" %>
  </p>
</div>