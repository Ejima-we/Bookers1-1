<div class="books">
  <div class="index">
  <% @books.each do |book| %>
    <%= book.title %>
    <%= book.body %>
  <% end %>
  </div>
  <div class="new">
    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>