<div class="books">
  <h1>Books</h1>
  <div class="index">
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
        </tr>
        <% end %>
    </table>
  </div>
  <div class="new">
    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>